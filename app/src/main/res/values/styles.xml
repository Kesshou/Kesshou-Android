<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="TextInputError" parent="TextAppearance.AppCompat.Small">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ff0000</item>
	</style>

	<style name="BlueButton" parent="Widget.AppCompat.Button.Colored">
		<item name="android:textColor">@color/white</item>
		<item name="colorButtonNormal">@color/blue_500</item>
	</style>

	<style name="RedButton" parent="Widget.AppCompat.Button.Colored">
		<item name="android:textColor">@color/white</item>
		<item name="colorButtonNormal">@color/red_500</item>
	</style>

	<style name="GreyButton" parent="@style/Base.Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/gray</item>
		<item name="colorButtonNormal">@color/grey_300</item>
	</style>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


</resources>
