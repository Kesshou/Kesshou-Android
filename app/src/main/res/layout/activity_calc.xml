<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:agendaCalendar="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:context="kesshou.android.daanx.views.news.CalcActivity">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</android.support.design.widget.AppBarLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:context="kesshou.android.daanx.views.news.CalcActivity">

		<com.github.tibolte.agendacalendarview.AgendaCalendarView
			android:id="@+id/agenda_calendar_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:theme="@style/AppTheme"
			style="@style/AppTheme"
			agendaCalendar:theme="@style/AppTheme"
			agendaCalendar:agendaCurrentDayTextColor="@color/colorAccent"
			agendaCalendar:calendarColor="@color/colorAccent"
			agendaCalendar:calendarCurrentDayTextColor="@color/black"
			agendaCalendar:calendarDayTextColor="@color/white"
			agendaCalendar:calendarHeaderColor="@color/colorImAccent"
			agendaCalendar:calendarPastDayTextColor="@color/light_blue_100"
			agendaCalendar:fabColor="@color/yellow_500"
			/>
	</LinearLayout>

</android.support.design.widget.CoordinatorLayout>


